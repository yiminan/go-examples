{
  "version": 3,
  "name": "krakend-gateway",
  "port": 8080,
  "timeout": "3000ms",
  "telemetry": {
    "metrics": {
      "namespace": "krakend",
      "port": 8090,
      "expose_endpoint": true,
      "endpoint": "/__stats"
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/users",
      "method": "GET",
      "backend": [
        {
          "host": [
            "http://localhost:3001"
          ],
          "url_pattern": "/users",
          "method": "GET"
        }
      ]
    }
  ]
}